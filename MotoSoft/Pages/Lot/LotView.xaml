<Page x:Class="MotoSoft.Pages.Lot.LotView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoSoft.Pages.Lot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add New Lot">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0" MinWidth="300" MinHeight="260" Background="#FF021D2A">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Lot Number" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.ColumnSpan="1" Grid.Column="1" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Lot}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.ColumnSpan="1" Grid.Column="1"/>
            <Label Content="Type" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Row="1" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Type}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Row="1" Height="61"/>
            <Label Content="Make" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Row="2" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Make}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Row="2"/>
            <Label Content="Model" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Row="3" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Model}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Row="3"/>
            <Label Content="Title" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Title}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Column="1" Grid.Row="1"/>
            <Label Content="Bill Of Sale" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Bos}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Column="1" Grid.Row="2"/>
            <Label Content="Notes" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="3" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Notes}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="3" MaxLength="300" Grid.Column="1" Grid.Row="3" MinHeight="23" Foreground="#FF3399CC"/>
            <Label Content="Cost" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Cost}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Column="2" Grid.Row="1"/>
            <Label Content="Year" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="2" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Year}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Column="2" Grid.Row="2"/>
            <Label Content="Mileage" Margin="0" VerticalAlignment="Top" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="3" Foreground="#FF3399CC"/>
            <TextBox Text="{Binding Product.Mileage}" Margin="5,25,5,5" TextWrapping="Wrap" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" BorderBrush="#FF3399CC" MinWidth="100" MaxLines="1" MaxLength="100" Grid.Column="2" Grid.Row="3"/>
            <Button Content="Add Lot" Command="{Binding AddProduct}" Margin="0" Grid.Row="4" VerticalAlignment="Center" BorderBrush="#FF3399CC" Foreground="#FF3399CC" Background="Transparent" HorizontalAlignment="Center" Width="100" FontFamily="Calibri" FontSize="14"/>
            <Button Content="Edit" Margin="0" Grid.Row="4" VerticalAlignment="Center" BorderBrush="#FF3399CC" Foreground="#FF3399CC" Background="Transparent" HorizontalAlignment="Center" Width="100" FontFamily="Calibri" FontSize="14" Grid.Column="1"/>
            <Button Content="Remove" Margin="0" Grid.Row="4" VerticalAlignment="Center" BorderBrush="#FF3399CC" Foreground="#FF3399CC" Background="Transparent" HorizontalAlignment="Center" Width="100" FontFamily="Calibri" FontSize="14" Grid.Column="2"/>
        </Grid>

    </Grid>
</Page>
